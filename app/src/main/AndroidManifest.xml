<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andyiac.arch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.andyiac.arch.ClientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Design">
        <activity
            android:name="com.andyiac.arch.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.andyiac.arch.ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.andyiac.arch.ui.MainActivity"
            android:theme="@style/AppTheme.Design.ActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andyiac.arch.ui.MainActivity" />
        </activity>

        <activity
            android:name="com.andyiac.arch.ui.CourseDetailsActivity"
            android:label="Course details"
            android:parentActivityName="com.andyiac.arch.ui.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andyiac.arch.ui.MainActivity" />
        </activity>

    </application>

</manifest>
